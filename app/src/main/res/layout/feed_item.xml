<?xml version="1.0" encoding="utf-8"?>
<com.letitplay.maugry.letitplay.user_flow.ui.widget.SwipeHorizontalLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:swipe_menu_max_width="@dimen/swipe_menu_width">

    <FrameLayout
        android:id="@+id/left_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/feed_item_menu_left_background"/>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/add_to_top_bg" />

        <TextView
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="47dp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:text="To the top of the playlist"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/feed_item_menu_right_background"/>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/add_to_bottom_bg" />
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <include
            android:id="@+id/feed_card"
            layout="@layout/view_feed_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/feed_card_info"
            layout="@layout/view_feed_card_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/feed_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/feed_card" />
    </android.support.constraint.ConstraintLayout>
</com.letitplay.maugry.letitplay.user_flow.ui.widget.SwipeHorizontalLayout>