<?xml version="1.0" encoding="utf-8"?>
<com.letitplay.maugry.letitplay.user_flow.ui.widget.SwipeHorizontalLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:swipe_menu_max_width="@dimen/swipe_menu_width">

    <FrameLayout
        android:id="@+id/left_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/feed_item_menu_left_background">

        <include
            android:id="@+id/left_menu_content"
            layout="@layout/view_swipe_menu_left"
            android:layout_width="@dimen/swipe_menu_width"
            android:layout_height="match_parent"
            android:layout_gravity="end" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/feed_item_menu_right_background">

        <include
            android:id="@+id/right_menu_content"
            layout="@layout/view_swipe_menu_right"
            android:layout_width="@dimen/swipe_menu_width"
            android:layout_height="match_parent"
            android:layout_gravity="start" />
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/feed_card"
            layout="@layout/view_feed_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/feed_card_info"
            layout="@layout/view_feed_card_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/feed_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/feed_card" />
    </android.support.constraint.ConstraintLayout>
</com.letitplay.maugry.letitplay.user_flow.ui.widget.SwipeHorizontalLayout>